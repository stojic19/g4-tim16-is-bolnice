<Window x:Class="Bolnica.PrikaziDatumeZaPomeranjePacijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
        Title="PrikaziDatumeZaPomeranjePacijent" Height="700" Width="430" WindowStartupLocation="CenterScreen">
    <StackPanel Background="LightBlue">
        <Label>TERMINI</Label>
        <ListBox x:Name="slobodniDatumiZaPomeranje" SelectionMode="Single" Height="600"   >

            <ListBox.ItemTemplate >
                <DataTemplate>



                    <WrapPanel Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel  Margin="10"  Width="360" HorizontalAlignment="Center" VerticalAlignment="Center" >



                            
                            <TextBlock   Text="{Binding Datum}"/>
                            




                        </StackPanel>

                    </WrapPanel>






                </DataTemplate>
            </ListBox.ItemTemplate>



        </ListBox>
        <Button Click="Button_Click">Izaberi datum</Button>

    </StackPanel>
</Window>

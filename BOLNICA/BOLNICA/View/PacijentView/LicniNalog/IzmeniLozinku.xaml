                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>

            <Label Grid.Row="0" >STARA LOZINKA</Label>
            <TextBox Height="30" FontSize="13" Padding="1 1"  Grid.Row="1"  FontWeight="DemiBold" Text="{ Binding  Path=Ime}" ></TextBox>

            <Label Grid.Row="3" >NOVA LOZINKA</Label>
            <TextBox Height="30" FontSize="13"  Padding="1 1"  Grid.Row="4"  FontWeight="DemiBold"  Name="brojKartona"  Text="{ Binding  Path=Prezime}"></TextBox>


        </Grid>
        <Image Source="/Slike/PacijentSlike/Screenshot 2021-06-04 185810.png" Height="146" Margin="10,30,0,40" />

        <Button   Height="30"  Margin="5 190" Background="#FF31577E" Click="Button_Click" >
            <Run Foreground="AntiqueWhite">POTVRDI IZMENU</Run>
        </Button>


    </StackPanel>
</UserControl>

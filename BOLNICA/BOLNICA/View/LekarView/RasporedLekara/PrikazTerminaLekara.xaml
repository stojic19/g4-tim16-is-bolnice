<UserControl x:Class="Bolnica.PrikazTerminaLekara"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Bolnica.Lokalizacija"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        d:DesignHeight="380" d:DesignWidth="850" >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="260*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="23,0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label  Content="{p:LocExtension PretragaDatum}" VerticalAlignment="Center" />
            <TextBox  Height="25" Width="150" Margin="7,8,57.8,7" Text="{Binding Path=PoljePretraga,UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        </StackPanel>

        <Label Content="{Binding Path=Poruka}" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3" Margin="23,0" Height="25" Foreground="Red" FontWeight="DemiBold"/>

        <DataGrid x:Name="dataGridTermini" ItemsSource="{Binding Path=Termini}" IsReadOnly="true"
                  SelectionMode="Single"  Background="WhiteSmoke" SelectedItem="{Binding Path=IzabranTermin}"
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" AutoGenerateColumns="False" Grid.Row="1" Grid.ColumnSpan="4"
                  MinWidth="800" MinHeight="260" Margin="17.5 , 10" Width="800">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{p:LocExtension VrstaTermina}" Binding="{Binding TipTermina}" Width="90*"/>
                <DataGridTextColumn Header="{p:LocExtension JmbgPacijenta}" Binding="{Binding Pacijent.Jmbg}" Width="95*"/>
                <DataGridTextColumn Header="{p:LocExtension ImePacijenta}" Binding="{Binding Pacijent.Ime}" Width="95*"/>
                <DataGridTextColumn Header="{p:LocExtension PrezimePacijenta}" Binding="{Binding Pacijent.Prezime}" Width="112*"/>
                <DataGridTextColumn Header="{p:LocExtension Datum}" Binding="{Binding Datum, StringFormat={}{0:dd/MM/yyyy}}" Width="80*"/>
                <DataGridTextColumn Header="{p:LocExtension Pocetak}" Binding="{Binding Datum, StringFormat={}{0:HH:mm}}" Width="55*"/>
                <DataGridTextColumn Header="{p:LocExtension Trajanje}" Binding="{Binding Trajanje}" Width="55*"/>
                <DataGridTextColumn Header="{p:LocExtension Prostorija}" Binding="{Binding Prostor}" Width="65*"/>

            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Grid.Column="0" Content="{p:LocExtension ZakaziTermin}" Margin="10,5" VerticalContentAlignment="Center" 
                HorizontalContentAlignment="Center" Command="{Binding Path=ZakaziTerminKomanda}" Height="27" Width="185"/>
        <Button  Grid.Row="2" Grid.Column="1" Content="{p:LocExtension IzmenaTermina}" Margin="10,5" VerticalContentAlignment="Center" 
                HorizontalContentAlignment="Center" Command="{Binding Path=IzmeniTerminKomanda}"  Height="27" Width="185"/>
        <Button  Grid.Row="2" Grid.Column="2" Content="{p:LocExtension OtkaziTermin}" Margin="10,5" VerticalContentAlignment="Center" 
                HorizontalContentAlignment="Center" Command="{Binding Path=OtkaziTerminKomanda}" Height="27" Width="185"/>
        <Button  Grid.Row="2" Grid.Column="3" Content="{p:LocExtension Karton}" Margin="10,5" VerticalContentAlignment="Center" 
                HorizontalContentAlignment="Center" Height="27" Width="185" Command="{Binding Path=PrikazKartonaKomanda}"/>


    </Grid>
</UserControl>
<UserControl x:Class="Bolnica.PacijentFolder.PrikazAlergenaPacijenta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bolnica.PacijentFolder"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    <StackPanel Margin="0,0,0.4,29">
        <Label Margin="20 00" FontFamily="Times New Roman" FontSize="15">Lista alergena</Label>
        <ListBox x:Name="alergeniPacijenta" SelectionMode="Single" Height="321" Margin="20,0,20.4,0"  >

            <ListBox.ItemTemplate >
                <DataTemplate>



                    <WrapPanel Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid  Margin="10"  Width="260" Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <TextBlock Text="{Binding IdAlergena}" />
                        </Grid>

                    </WrapPanel>



                </DataTemplate>
            </ListBox.ItemTemplate>



        </ListBox>
        <Image Source="/Slike/PacijentSlike/alergije.png" Height="221" Margin="96,0,0.4,0" />


    </StackPanel>
</UserControl>

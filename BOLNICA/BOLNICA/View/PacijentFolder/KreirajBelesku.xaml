<UserControl x:Class="Bolnica.View.PacijentFolder.KreirajBelesku"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bolnica.View.PacijentFolder"
             mc:Ignorable="d" 
              d:DesignHeight="400" d:DesignWidth="350" >


    <StackPanel Background="White" Margin="10 0" >

        <Label FontWeight="DemiBold" FontSize="20" Margin="22 10 0 0" >Kreiraj belešku</Label>
        <Border BorderBrush="SlateGray"  BorderThickness="2"  Margin="22, 5  "  >
            <TextBox Height="350" ></TextBox>
        </Border>

        <Button Height="25" Margin="22,5" Background="#FF31577E" Command="{Binding Path=SacuvajBeleskuKomanda}">
            <Run Foreground="AntiqueWhite">SAČUVAJ BELEŠKU</Run>
        </Button>
        <Button Height="25" Margin="22,5" Background="#FF31577E" Command="{Binding Path=NapraviPodsetnikKomanda}">
            <Run Foreground="AntiqueWhite">NAPRAVI PODSETNIK</Run>
        </Button>
        <Button Height="25" Margin="22,5" Background="#FF31577E" Command="{Binding Path=VratiSe}">
            <Run Foreground="AntiqueWhite">VRATI SE</Run>
        </Button>
    </StackPanel>

</UserControl>
